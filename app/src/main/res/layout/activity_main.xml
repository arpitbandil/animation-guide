<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/iv_side_rail"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginBottom="13dp"
            android:adjustViewBounds="true"
            android:src="@drawable/side_rail"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintVertical_bias="0" />

        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/iv_front_up"
            app:layout_constraintEnd_toStartOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_front_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:enabled="false"
                android:minWidth="35dp"
                android:minHeight="35dp"
                android:textColor="@color/black_50"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/view1"
                app:layout_constraintEnd_toStartOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/view1" />

            <View
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:background="@color/black" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_side_front_rail"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:adjustViewBounds="true"
            android:src="@drawable/side_rail"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintVertical_bias="0" />

        <View
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            android:transformPivotX="105dp"
            android:transformPivotY="5dp"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toStartOf="@+id/view3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/view3"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toStartOf="@+id/view4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@id/view2"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/view4"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@id/view3"
            app:layout_constraintWidth_percent="0.2" />

        <ImageView
            android:id="@+id/iv_top_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            android:src="@drawable/curtain"
            android:alpha="0.87"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/view4"
            app:layout_constraintEnd_toEndOf="@id/view4"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/view3"/>

        <Button
            android:id="@+id/iv_front_up"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
            app:icon="@drawable/ic_up_arrow_round"
            app:layout_constraintBottom_toTopOf="@id/iv_front_down"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/iv_front_down"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
            app:icon="@drawable/ic_down_arrow_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/iv_end_up"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
            app:icon="@drawable/ic_up_arrow_round"
            app:layout_constraintBottom_toTopOf="@id/iv_front_down"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/iv_end_down"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
            app:icon="@drawable/ic_down_arrow_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/iv_rail_up"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:hint="@string/rail_down"
            android:text="@string/rail_up"
            app:icon="@drawable/ic_up_arrow_round"
            app:layout_constraintBottom_toTopOf="@id/iv_rail_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/iv_rail_down"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="@string/rail_down"
            app:icon="@drawable/ic_down_arrow_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>