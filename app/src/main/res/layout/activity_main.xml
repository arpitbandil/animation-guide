<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <View
            android:id="@+id/view1"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@color/black"
            android:rotation="0"
            android:transformPivotX="105dp"
            android:transformPivotY="5dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_front_up"
            app:layout_constraintEnd_toStartOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            android:transformPivotX="105dp"
            android:transformPivotY="5dp"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toStartOf="@+id/view3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/view3"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            android:transformPivotX="0dp"
            android:transformPivotY="5dp"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toStartOf="@+id/view4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@id/view2"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/view4"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            android:transformPivotX="105dp"
            android:transformPivotY="5dp"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@id/view3"
            app:layout_constraintWidth_percent="0.2" />

        <ImageView
            android:id="@+id/iv_front_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:rotation="180"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toTopOf="@id/iv_front_down"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_front_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/iv_end_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:rotation="180"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toTopOf="@id/iv_front_down"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iv_end_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>